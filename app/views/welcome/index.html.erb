                <div class="input-group-addon"><i class="fa fa-phone fa-fw"></i></div>
                <%= f.phone_field :phone, class: "form-control", placeholder: t('sections.rsvp.phone'), required: true %>
              </div>
            </div>
            <%= f.button t('sections.rsvp.send_reply'), class: "btn btn-default" %>
          <% end %>
        </div>
