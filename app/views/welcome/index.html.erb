  <section id="rsvp" class="row">
    <div class="col-md-12 text-center">
      <h1>RSVP</h1>
      <p>Please tell us if you are coming by December 5, 2015 so we can accommodate you.</p>
      <div class="row">
        <div class="col-md-12">
          <%= form_for @rsvp_form, url: root_path, method: :post do |f| %>
            <div class="form-group">
              <label class="sr-only" for="name">Name</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-fw"></i></div>
                <%= f.text_field :name, required: true, class: "form-control", placeholder: "Your name" %>
              </div>
              <label class="sr-only" for="guest-count">Number of guests</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user fa-fw"></i></div>
                <%= f.number_field :guest_count, required: true, class: "form-control", placeholder: "Number of guests" %>
              </div>
              <label class="sr-only" for="song">Song request</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-music fa-fw"></i></div>
                <%= f.text_field :song_request, required: true, class: "form-control", placeholder: "Song request" %>
              </div>
            </div>
            <%= f.button "Send reply", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>