          <h1><%= t('sections.rsvp.name') %></h1>
          <p><%= t('sections.rsvp.body', email_laura_castro: mail_to("laura@barbaradiez.com")).html_safe %></p>
          <%= form_for @rsvp_form, url: root_path, method: :post do |f| %>
            <div class="form-group">
              <label class="sr-only" for="guest-count">Number of guests</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-slack fa-fw"></i></div>
                <%= f.number_field :guest_count, class: "form-control", placeholder: t('sections.rsvp.guest_count'), required: true %>
              </div>
              <label class="sr-only" for="guest_names">Names of guests</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-users fa-fw"></i></div>
                <%= f.text_field :guest_names, class: "form-control", placeholder: t('sections.rsvp.guest_names'), required: true %>
              </div>
              <label class="sr-only" for="song">Food restrictions (if any)</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-cutlery fa-fw"></i></div>
                <%= f.text_field :food_restrictions, class: "form-control", placeholder: t('sections.rsvp.food_restrictions') %>
